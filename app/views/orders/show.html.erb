<section class="orders-show">

  <header class="page-header">
    <h1>Order <%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <ul class="list-group">
    <% @order.line_items.each do |line_item| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= render 'line_item', product: line_item.product, quantity: line_item.quantity.to_i %>
      </li>
    <% end %>
  </ul>

  <div class="list-group-item d-flex justify-content-between align-items-center"> Total paid: <%= humanized_money_with_symbol @order.total_cents %> </div>
  <div class="list-group-item d-flex justify-content-between align-items-center"> Email: <%= @order.email %> </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
